{
  "manifest_version": 3,
  "name": "Goodbye, Glassdoor",
  "description": "Blocks Glassdoor's Sign Up banner",
  "version": "1.0",
  "icons": {
    "16": "/images/icon-small.png",
    "48": "/images/icon-medium.png",
    "128": "/images/icon-big.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.glassdoor.sg/*"
      ],
      "runAt" : "document_idle",
      "all_frames": true
    }
  ]
}